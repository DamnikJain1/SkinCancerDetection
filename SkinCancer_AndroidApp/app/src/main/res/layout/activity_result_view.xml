<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResultView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-34dp"
        tools:layout_editor_absoluteY="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageviewRes"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:src="@drawable/result1"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/resultTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#009688"
                android:layout_below="@+id/imageviewRes"
                android:textSize="25dp"
                android:layout_weight="1"
                android:text="Results"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/benignView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resultTextview"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="43dp"
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="22dp"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/malignantView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/benignView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:textAlignment="center"
                android:textColor="#E91E63"
                android:textSize="22dp"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:id="@+id/nearbyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/malignantView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="50dp"
                android:textColor="#FFFFFF"
                android:background="#FF5722"
                android:padding="8dp"
                android:text="Nearby Doctor" />

            <Button
                android:id="@+id/forumButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/malignantView"
                android:layout_marginStart="50dp"
                android:layout_marginTop="66dp"
                android:textColor="#FFFFFF"
                android:background="#03A9F4"
                android:padding="8dp"
                android:text="Raise on Forum" />


        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>